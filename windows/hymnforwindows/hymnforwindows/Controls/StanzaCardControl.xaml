<UserControl
    x:Class="hymnforwindows.Controls.StanzaCardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:hymnforwindows.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="TextBlockStanzaStyle">
            <Setter  Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="23"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <TextBlock x:Name="numberText" Style="{StaticResource TextBlockStanzaStyle}" Foreground="Goldenrod">1</TextBlock>
            <TextBlock Style="{StaticResource TextBlockStanzaStyle}" x:Name="stanzaText"   />

        </StackPanel>
    </Grid>
</UserControl>
